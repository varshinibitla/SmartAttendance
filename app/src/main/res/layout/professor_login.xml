<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#417BBB"
    tools:context=".ProfessorLogin">

    <TextView
        android:id="@+id/professorLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Professor Login"
        android:textSize="42sp"
        android:textStyle="bold"
        android:fontFamily="@font/clashcrotesksemibold"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/qrgbutton"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="75dp"
        android:text="Generate QR Code"
        android:backgroundTint="#e4c16f"
        android:textColor="@color/black"
        android:fontFamily="@font/clashcroteskmedium"
        android:textSize="28sp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/professorLogin"
        app:layout_constraintBottom_toTopOf="@+id/attendancerecord" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/attendancerecord"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:text="Attendance Record"
        android:textColor="@color/black"
        android:backgroundTint="#e4c16f"
        android:textSize="28sp"
        android:fontFamily="@font/clashcroteskmedium"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrgbutton"
        app:layout_constraintBottom_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendancerecord"
        app:srcCompat="@drawable/profattend"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"
        android:contentDescription="logo" />

</androidx.constraintlayout.widget.ConstraintLayout>